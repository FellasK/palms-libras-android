<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/greetingTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/gray_dark"
                android:text="Bom dia, User!" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chipLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary_blue">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_activities"
                        app:tint="@color/white" />
                    <TextView
                        android:id="@+id/tvLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NÃ­vel 1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chipXp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary_red">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_ranking"
                        app:tint="@color/white" />
                    <TextView
                        android:id="@+id/tvXp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 XP"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 dias de sequÃªncia ðŸ”¥"
            android:textColor="@color/primary_orange"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incentivo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray_dark"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/primary_purple"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/squircle_purple"
                        android:layout_marginEnd="12dp"
                        android:foregroundGravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_abc_placeholder"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvCourseTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alfabeto"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvCourseSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LiÃ§Ã£o 1 de 10"
                            android:textColor="@color/white"
                            android:alpha="0.8"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnContinueCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/continue_button"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seu progresso"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modulo 1: Letras"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <ProgressBar
            android:id="@+id/progressModule1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progress="50"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_custom"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modulo 2: NÃºmeros (Ainda em desenvolvimento)"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"/>
        <ProgressBar
            android:id="@+id/progressModule2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progress="20"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_custom"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modulo 3: Cores (Ainda em desenvolvimento)"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"/>
        <ProgressBar
            android:id="@+id/progressModule3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progress="10"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_custom"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</ScrollView>